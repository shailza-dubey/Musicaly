<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

<GridLayout
    android:id="@+id/choice_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="6">

    <Button
        android:id="@+id/recently_played"
        style="@style/CategoryStyle"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#F44336"
        android:text="@string/recently_played" />

    <ImageView
        android:id="@+id/recent_img"
        style="@style/ImageStyle"
        android:layout_row="1"
        android:layout_column="0"
        android:src="@drawable/recently" />

    <Button
        android:id="@+id/top_albums"
        style="@style/CategoryStyle"
        android:layout_row="0"
        android:layout_column="1"
        android:background="#FFA726"
        android:text="@string/top_albums" />

    <ImageView
        android:id="@+id/top_img"
        style="@style/ImageStyle"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@drawable/best_artists" />

    <Button
        android:id="@+id/stress_buster"
        style="@style/CategoryStyle"
        android:layout_row="2"
        android:layout_column="0"
        android:background="#4FC3F7"
        android:text="@string/stress_buster" />

    <ImageView
        android:id="@+id/stress_img"
        style="@style/ImageStyle"
        android:layout_row="3"
        android:layout_column="0"
        android:src="@drawable/stress_buster" />

    <Button
        android:id="@+id/best_of_artists"
        style="@style/CategoryStyle"
        android:layout_row="2"
        android:layout_column="1"
        android:background="#FFFF00"
        android:text="@string/best_of_artists" />

    <ImageView
        android:id="@+id/best_img"
        style="@style/ImageStyle"
        android:layout_row="3"
        android:layout_column="1"
        android:src="@drawable/top_artists" />

    <Button
        android:id="@+id/chill"
        style="@style/CategoryStyle"
        android:layout_row="4"
        android:layout_column="0"
        android:background="#B388FF"
        android:text="@string/chill" />

    <ImageView
        android:id="@+id/chill_image"
        style="@style/ImageStyle"
        android:layout_row="5"
        android:layout_column="0"
        android:src="@drawable/chill" />

    <Button
        android:id="@+id/bollywood_romance"
        style="@style/CategoryStyle"
        android:layout_row="4"
        android:layout_column="1"
        android:background="#E91E63"
        android:text="@string/romantic" />

    <ImageView
        android:id="@+id/bolly_img"
        style="@style/ImageStyle"
        android:layout_row="5"
        android:layout_column="1"
        android:src="@drawable/bollywood_romance" />

</GridLayout>
</ScrollView>